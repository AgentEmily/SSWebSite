@model IEnumerable<SStest.Models.Categories>
@{
    ViewBag.Title = "RoleSelected";
}
<!DOCTYPE html>
<html>
<head>
    <title>RoleSelect</title>
    <style>
        /** {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}*/


#mscontainer{

    height:400px;
}
.masonry{
    width:600px;
    margin:30px auto;
}


.masonry .item {
  width:  120px;
  height: 60px;
  float: left;
  background: #808080;
  border: 1px solid;
  border-color: #E0E0E0;
  border-radius: 5px;
  text-align:center;
  color:white;
  margin-bottom: 10px;
  padding:0;
  font-size:20px;
  font-weight:bold;
}
.item.w2 {  width:  180px;
  height: 60px;
  float: left;
  background: #808080;
  border: 1px solid;
  border-color: #E0E0E0;
  border-radius: 5px;
  text-align:center;/*上下也要*/
  padding:10px 0px 10px 0px;
  color:white;
  margin-bottom: 10px;}

.item:hover {
  background: #00CACA;
  border-color: white;
  cursor: pointer;
  opacity:0.5;
}

.item.gigante {
  width: 210px;
  height: 90px;
 background-color:  #00CACA;
 padding:25px 0px 20px 0px;
}
        </style>
    </head>
<body>
    <h2>RoleSelected</h2>
    <div style="margin:10px auto; text-align:center; font-size:20px;font-weight:bold;">請點選您常購買的商品...</div>

    <div class="masonry js-masonry" data-masonry-options='{ "columnWidth": 60@*, "gutter": 5*@  }'>
        <!--"isFitWidth":true-->
        @foreach (var _role in Model)
        {
            <a  href="javascript:void(0);"><div class="item w2">@_role.CategoryName</div></a>
        }

        @*<div class="item">上班族</div>*@

        <!--每一個項目創一個div, 同樣的大小設同樣的class-->
    </div>

    <button type="button" class="btn btn-default get" style="float:right">下一步 >></button>

    <a onclick="SendRoleSelected()" href="javascript:void(0);" class=" btn btn-default get" role="button" style="float:right">
        OK
    </a>
</body>
</html>