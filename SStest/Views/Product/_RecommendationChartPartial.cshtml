@model IEnumerable<SStest.Models.Products>

<style>
    .imgbox {
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        width: 100%;
        height: 200px;
    }

        .imgbox img {
            vertical-align: middle;
            width: 90%;
            height: auto;
            max-height: 100%;
        }
</style>

<div class="col-sm-12">
    <div class="tab-content">
        <div class="tab-pane fade active in">
            @foreach (var RCItem in Model)
            {
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <div class="imgbox ">
                                    <img src='@Url.Action("GetProductPhoto", "Home", new { id = @RCItem.Product_ID })' alt="" />
                                </div>
                                <h2>$@RCItem.UnitPrice</h2>
                                <p>@RCItem.ProductName</p>
                                <a href="#" class="btn btn-default add-to-cart" onclick="AddToCart('@RCItem.Product_ID')"><i class="fa fa-shopping-cart"></i>加入購物車</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="">
        </div>
    </div>
</div>
