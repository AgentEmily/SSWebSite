@model IEnumerable<SStest.Models.AdSlider>

<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var adItem in Model)
                        {
                            if (@adItem.ID == 1)
                            {
                                <div class="item active">
                                    <div class="col-sm-5">
                                        <h1>@adItem.Title_B</h1>
                                        <h2>@adItem.Title_M</h2>
                                        <p>@adItem.Title_S</p>
                                        <button type="button" class="btn btn-primary btn-get">前往</button>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="imgbox">
                                            <img src='@Url.Action("GetImageByte", "Home", new { id = @adItem.ID})' class="sliderImg img-responsive" alt="" />
                                        </div>
                                        @*<img src="images/home/pricing.png" class="pricing" alt="" />*@
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <div class="col-sm-7">
                                        <h1>@adItem.Title_B</h1>
                                        <h2>@adItem.Title_M</h2>
                                        <p>@adItem.Title_S</p>
                                        <button type="button" class="btn btn-primary get">前往</button>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="imgbox">
                                            <img src='@Url.Action("GetImageByte", "Home", new { id = @adItem.ID})' class="sliderImg img-responsive" alt="" />
                                        </div>
                                        @*<img src="images/home/pricing.png" class="pricing" alt="" />*@
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section><!--/slider-->
