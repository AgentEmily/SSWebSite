@model IEnumerable<SStest.Models.Products>

<div class="category-tab">
    <!--category-tab-->
    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tshirt" data-toggle="tab">熱銷商品</a></li>
            <li><a href="" data-toggle="tab"></a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="tshirt">
            @foreach (var hotItem in Model)
            {
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <div class="imgbox ">
                                    <img src='@Url.Action("GetProductPhoto", "Home", new { id = @hotItem.Product_ID})' alt="" />
                                </div>
                                <h2>$@hotItem.UnitPrice</h2>
                                <p>@hotItem.ProductName</p>
                                <a href="#" class="btn btn-default add-to-cart" onclick="AddToCart('@hotItem.Product_ID')"><i class="fa fa-shopping-cart"></i>加入購物車</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="">
        </div>
    </div>
</div><!--/category-tab-->
