@model IEnumerable<SStest.Models.OrderDetail>
@{
    ViewBag.Title = "MyOrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@String.Format("訂單編號{0}商品列表", this.Model.First().OrderDetail_ID)</h2>

<table class="table">
    <tr>
        <th>商品名稱</th>
        <th>商品價格</th>
        <th>商品數量</th>
    </tr>
@foreach(var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
    </tr>
}
</table>
@Html.ActionLink("回商品列表", "MyOrder", new { }, new { @class ="btn btn-default"})
